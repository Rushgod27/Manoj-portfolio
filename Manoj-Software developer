<script>
  /* Rotating focus logic */
  (function(){
    var items = document.querySelectorAll('.focus');
    var i = 0;
    if(!items.length) return;
    items[0].classList.add('show');
    setInterval(function(){
      items[i].classList.remove('show');
      i = (i + 1) % items.length;
      items[i].classList.add('show');
    }, 2200);
  })();
</script>

